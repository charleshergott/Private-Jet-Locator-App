<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        tools:context=".BlockProductFragment">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert!"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="why"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="16dp"
            android:minLines="4"
            android:padding="10dp"
            android:gravity="start"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="report"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etReason"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="cancel"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toStartOf="@id/tvReport"
            app:layout_constraintTop_toTopOf="@id/tvReport"
            app:layout_constraintBottom_toBottomOf="@id/tvReport"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>