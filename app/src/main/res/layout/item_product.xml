<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/colorBg">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfilePic"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="10dp"
            android:elevation="1dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvDate">

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text=""
            android:textColor="@color/text_color_title"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvProfilePic" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/cvProfilePic"
            app:layout_constraintTop_toBottomOf="@id/tvDescription">

            <LinearLayout
                android:id="@+id/llLikeDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgDisLikes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_unlike" />

                    <TextView
                        android:id="@+id/tvDisLikesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgDisLikes"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/imgLikes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/tvLikesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgLikes"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text=""
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/layout"
            app:layout_constraintEnd_toEndOf="@id/cvProfilePic"
            app:layout_constraintTop_toTopOf="@id/layout" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivReport"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_report"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/layout"
            app:layout_constraintEnd_toEndOf="@id/cvProfilePic"
            app:layout_constraintTop_toTopOf="@id/layout" />
<!--        <Button-->
<!--            android:id="@+id/addTime"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Add Time"-->
<!--            android:background="@drawable/bg_rounded_orange"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/ubuntu_regular"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/text_color_title"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_time_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>