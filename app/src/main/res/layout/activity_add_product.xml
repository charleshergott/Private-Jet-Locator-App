                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_round_input_box">

                    <RadioButton
                        android:id="@+id/radioFlight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_regular"
                        android:minHeight="48dp"
                        android:text="@string/flights" />

                    <RadioButton
                        android:id="@+id/radioHome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_regular"
                        android:minHeight="48dp"
                        android:text="@string/homes" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroupScheduleParked"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/bg_round_input_box">

                    <RadioButton
                        android:id="@+id/radioSchedule"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:fontFamily="@font/ubuntu_regular"
                        android:minHeight="48dp"
                        android:text="@string/schedule" />

                    <RadioButton
                        android:id="@+id/radioParked"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_regular"
                        android:minHeight="48dp"
                        android:text="@string/parked" />
                    <RadioButton
                        android:id="@+id/radioRegular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_regular"
                        android:minHeight="48dp"
                        android:text="Charter"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/getAirCraftType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Aircraft Type"
                    android:gravity="start|center_vertical"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="Autofill"
                    app:drawableEndCompat="@drawable/ic_arrow"
                    app:drawableTint="@color/colorBlack" />

                <EditText
                    android:id="@+id/etComments"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:gravity="center|start"
                    android:hint="Tentative Destination"
                    android:visibility="gone"
                    android:imeOptions="actionDone"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:lines="5"
                    android:maxLength="300"
                    android:maxLines="5"
                    android:padding="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="Autofill" />



<!--                <TextView-->
<!--                    android:id="@+id/tvUploadApiCraft"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:layout_marginEnd="10dp"-->
<!--                    android:background="@drawable/bg_round_input_box"-->
