<!--                    android:textSize="@dimen/_10ssp" />-->

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Select Location"
                    android:paddingVertical="16dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="12dp"
                    android:visibility="gone"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Address"
                    android:visibility="gone"
                    android:inputType="text"
                   android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="@string/input_hint_price"
                    android:visibility="gone"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                   android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/etDepartureDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Departure date"
                    android:paddingStart="15dp"
                    android:paddingEnd="12dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/etTimeOfDeparture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Time of Departure"
                    android:paddingStart="15dp"
                    android:paddingEnd="12dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etNumberOfSeats"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Number of seats"
                    android:imeOptions="actionDone"
                    android:inputType="numberSigned"
                    android:maxLength="8"
                   android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:ignore="Autofill" />
                <TextView
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="End Date"
                    android:visibility="gone"
                    android:gravity="start|center_vertical"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="Autofill"
                    app:drawableEndCompat="@drawable/ic_arrow"
                    app:drawableTint="@color/colorBlack" />

                <EditText
                    android:id="@+id/etDestination"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Destination"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                   android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etFlightTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Flight Time"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="15"
                   android:paddingStart="15dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etCallUsOnn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_round_input_box"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="Call Us On"
                    android:text="+41 76 733 74 84"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:paddingStart="15dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_color_input_box"
                    android:textColorHint="@color/hint_color_input_box"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:ignore="Autofill" />


                <Button
                    android:id="@+id/btnBlinkShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/gradient_login_btn"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="@string/btn_title_upload_picture"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rlProgressLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:clickable="true"
                android:focusable="true"
                android:elevation="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constrainedHeight="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lottie_rawRes="@raw/loading"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>