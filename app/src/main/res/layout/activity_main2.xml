<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg">


        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/imgCapturePhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@id/imgGallery"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:background="@drawable/bg_capture_circle"
            android:padding="5dp"
            android:src="@drawable/bg_capture_bg_white" />

        <ImageView
            android:id="@+id/imgBackBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_back_btn"
            android:layout_marginBottom="25dp"
            />


        <ImageView
            android:id="@+id/imgSwitchMode"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_switch_mode"
            android:layout_marginBottom="25dp"
            />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/imgSwitchMode"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imgFlash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/ic_flash" />

            <ImageView
                android:id="@+id/imgCloseSmall"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_close_small"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="Chats"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_chat_btn"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/ubuntu_bold" />

        <ImageView
            android:id="@+id/imgGallery"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_gallery"
            android:layout_marginBottom="25dp"
            />

        <TextView
            android:id="@+id/tvTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Trending now"
            android:layout_marginLeft="15dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_trending_now"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/ubuntu_bold"/>

        <RelativeLayout
            android:id="@+id/rlProgressLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>


    </RelativeLayout>
</layout>